---
interface Props {
	title: string;
}

const { title } = Astro.props;

import BaseLayout from '@layouts/BaseLayout.astro';
import { SITE } from "@config";
---

<BaseLayout title={title} description="" titleTemplate={"%s | "+SITE.title}>
	<div class="w-full max-w-7xl mx-auto p-4 py-16 md:py-24 space-y-10" transition:animate="slide">
		<slot />
	</div>
</BaseLayout>
